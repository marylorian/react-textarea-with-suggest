{
  "name": "react-textarea-with-suggest",
  "version": "2.1.1",
  "description": "Textarea with suggest for React app",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "dependencies": {
    "react-textarea-autosize": "^8.4.0"
  },
  "files": [
    "lib",
    "example"
  ],
  "scripts": {
    "prettier": "prettier --write .",
    "build:debug": "npm install && npm run build && rm -rf node_modules",
    "build": "rollup -c",
    "start": "rollup -c -w"
  },
  "license": "MIT",
  "eslintConfig": {
    "extends": "react-app"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marylorian/react-textarea-with-suggest.git"
  },
  "keywords": [
    "textarea",
    "suggest",
    "textarea-suggest",
    "react",
    "react-component"
  ],
  "author": "Mariia Lobareva",
  "bugs": {
    "url": "https://github.com/marylorian/react-textarea-with-suggest/issues"
  },
  "homepage": "https://github.com/marylorian/react-textarea-with-suggest#readme",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ]
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.2.0",
    "react-dom": "^17.0.0 || ^18.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.0.0-0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-terser": "^0.2.1",
    "@rollup/plugin-typescript": "^10.0.1",
    "@types/react": "^18.0.26",
    "babel-loader": "^8.0.6",
    "css-loader": "^6.7.3",
    "prettier": "2.7.1",
    "rollup": "^2.79.1",
    "rollup-plugin-css-only": "^4.3.0",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^4.2.1"
  }
}
